{
  "compilerOptions": {
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "noImplicitReturns": true,    
    "esModuleInterop": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es5",
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./dist",
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "development", "dist"]
}